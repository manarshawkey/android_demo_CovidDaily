<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/label_location">
    <ListPreference
        app:key="@string/key_country"
        app:title="@string/label_country"
        app:entries="@array/country_entries"
        app:entryValues="@array/country_values"
        app:summary="@string/summary_country"
        app:defaultValue="DE"
        app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/label_notifications">
        <SwitchPreferenceCompat
            app:title="@string/label_notifications"
            app:defaultValue="false"
            app:key="@string/key_notifications"
            app:summaryOn="@string/summary_enableNotifications"
            app:summaryOff="@string/summary_disableNotifications"/>
    </PreferenceCategory>
</PreferenceScreen>